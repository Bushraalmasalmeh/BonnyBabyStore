@model BonnyBabyStore.Models.Product

@{
    ViewData["Title"] = "Edit Product";
    Layout = "_AdminLayout";
}

@section Styles {
    <style>
        .form-card {
            background-color: white;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 30px;
        }

        .current-img {
            max-width: 150px;
            border-radius: 8px;
            margin-top: 10px;
        }
    </style>
}

<div class="products-content fade-in">
    <div class="page-header">
        <h1 class="page-title">Edit Product: @Model.Name</h1>
    </div>

    <div class="form-card">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control p-2" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Price" class="form-label fw-bold"></label>
                    <input asp-for="Price" class="form-control p-2" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label fw-bold">Category</label>
                <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories">
                    <option value="">-- Select a Category --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-bold"></label>
                <textarea asp-for="Description" class="form-control p-2" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label for="imageFile" class="form-label fw-bold">Upload New Image (Optional)</label>
                        <input name="imageFile" type="file" class="form-control" accept="image/*" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Current Image</label>
                        <div>
                            <img src="@(Model.ImageUrl ?? "/images/placeholder.png")" alt="Current Image" class="current-img" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn-add">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>