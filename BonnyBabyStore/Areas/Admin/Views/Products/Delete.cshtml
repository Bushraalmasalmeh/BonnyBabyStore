@model BonnyBabyStore.Models.Product

@{
    ViewData["Title"] = "Delete Product";
    Layout = "_AdminLayout";
}

@section Styles {
    <style>
        .delete-card {
            background-color: white;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 30px;
            text-align: center;
        }

        .delete-img {
            max-width: 200px;
            border-radius: 8px;
            margin-top: 10px;
            margin-bottom: 20px;
        }
    </style>
}

<div class="products-content fade-in">
    <div class="page-header">
        <h1 class="page-title">Delete Product</h1>
    </div>

    <div class="delete-card">
        <h3 class="text-danger">Are you sure you want to permanently delete this product?</h3>
        <hr />

        <h4>@Model.Name</h4>
        <img src="@(Model.ImageUrl ?? "/images/placeholder.png")" alt="@Model.Name" class="delete-img" />
        <p><strong>Category:</strong> @Model.Category?.Name</p>
        <p><strong>Price:</strong> @Model.Price.ToString("C", new System.Globalization.CultureInfo("ar-JO"))</p>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg">Yes, Delete Product</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
        </form>
    </div>
</div>