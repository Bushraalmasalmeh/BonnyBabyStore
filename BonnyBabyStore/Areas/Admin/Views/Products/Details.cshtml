@model BonnyBabyStore.Models.Product

@{
    ViewData["Title"] = "Product Details";
    Layout = "_AdminLayout";
}

@section Styles {
    <style>
        .details-card {
            background-color: white;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 30px;
        }

        .details-img {
            max-width: 100%;
            max-height: 400px;
            border-radius: 15px;
            object-fit: cover;
            margin-bottom: 20px;
        }

        .details-price {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-color);
        }
    </style>
}

<div class="products-content fade-in">
    <div class="page-header">
        <h1 class="page-title">Product Details</h1>
    </div>

    <div class="details-card">
        <div class="row">
            <div class="col-md-5">
                <img src="@(Model.ImageUrl ?? "/images/placeholder.png")" alt="@Model.Name" class="details-img" />
            </div>
            <div class="col-md-7">
                <h2>@Model.Name</h2>
                <hr>
                <dl class="row">
                    <dt class="col-sm-4">Category</dt>
                    <dd class="col-sm-8">@Model.Category?.Name</dd>

                    <dt class="col-sm-4">Description</dt>
                    <dd class="col-sm-8">@Model.Description</dd>

                    <dt class="col-sm-4">Price</dt>
                    <dd class="col-sm-8"><span class="details-price">@Model.Price.ToString("C", new System.Globalization.CultureInfo("ar-JO"))</span></dd>
                </dl>
                <hr>
                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-add">Edit Product</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>