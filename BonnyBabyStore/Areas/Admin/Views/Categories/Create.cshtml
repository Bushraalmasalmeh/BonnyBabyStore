@model BonnyBabyStore.Models.Category

@{
    ViewData["Title"] = "Create New Category";
    Layout = "_AdminLayout"; 
}

@section Styles {
    <style>
        .form-card {
            background-color: white;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 30px;
        }
    </style>
}

<div class="categories-content fade-in">
    <div class="page-header">
        <h1 class="page-title">Add New Category</h1>
    </div>

    <div class="form-card">
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input asp-for="Name" class="form-control p-2" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label fw-bold"></label>
                        <textarea asp-for="Description" class="form-control p-2" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label for="imageFile" class="form-label fw-bold">Category Image</label>
                        <input name="imageFile" type="file" class="form-control" accept="image/*" />
                    </div>

                    <div class="form-group mt-4">
                        <input type="submit" value="Save Category" class="btn-add" />
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>