@model BonnyBabyStore.Models.User

@{
    ViewData["Title"] = "Delete User";
    Layout = "_AdminLayout";
}

<div class="page-header"><h1 class="page-title">Delete User</h1></div>

<div class="delete-card" style="background-color: white; padding: 30px; border-radius: 15px; text-align:center;">
    <h3 class="text-danger">Are you sure you want to permanently delete this user?</h3>
    <hr />

    <img src="@(Model.ImageUrl ?? "/images/users/default-avatar.png")" style="width: 120px; height: 120px; border-radius: 50%; object-fit: cover;" alt="User Avatar" />
    <h4 class="mt-3">@Model.FirstName @Model.LastName</h4>
    <p class="text-muted">@Model.Email</p>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger btn-lg">Yes, Delete This User</button>
        <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
    </form>
</div>