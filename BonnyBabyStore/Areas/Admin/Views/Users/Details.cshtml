@model BonnyBabyStore.Models.User

@{
    ViewData["Title"] = "User Details";
    Layout = "_AdminLayout";
}

<div class="page-header"><h1 class="page-title">User Details</h1></div>
<div class="details-card" style="background-color: white; padding: 30px; border-radius: 15px;">
    <div class="row">
        <div class="col-md-4 text-center">
            <img src="@(Model.ImageUrl ?? "/images/users/default-avatar.png")" style="width: 200px; height: 200px; border-radius: 50%; object-fit: cover;" alt="User Avatar" />
            <h3 class="mt-3">@Model.FirstName @Model.LastName</h3>
            <p class="text-muted">@Model.Role?.Name</p>
        </div>
        <div class="col-md-8">
            <h4>User Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">User Name</dt>
                <dd class="col-sm-8">@Model.UserName</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Age</dt>
                <dd class="col-sm-8">@Model.Age</dd>

                <dt class="col-sm-4">Gender</dt>
                <dd class="col-sm-8">@Model.Gender</dd>
            </dl>
            <hr />
            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-add">Edit User</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>