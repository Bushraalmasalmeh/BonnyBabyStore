    ViewData["Title"] = "Orders Management";
    Layout = "_AdminLayout";
}

@section Styles {
<style>

        /* Orders Content */
        .orders-content {
            padding: 30px;
        }

        .page-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 30px;
        }

        .page-title {
            font-size: 1.8rem;
            color: var(--dark-text);
        }

        .btn-export {
            background: linear-gradient(135deg, var(--secondary-color) 0%, #0097a7 100%);
            color: var(--light-text);
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .btn-export:hover {
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(0, 184, 212, 0.3);
            }

        /* Filter and Search */
        .filter-section {
            background-color: var(--light-text);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 20px;
            margin-bottom: 30px;
        }

        .filter-row {
            display: flex;
            flex-wrap: wrap;
            gap:80px;
            margin-bottom: 20px;
            
        }

        .filter-item {
            flex: 1;
            min-width: 200px;
        }

        .filter-label {
            display: block;
            margin-bottom: 8px;
            font-size: 0.9rem;
            color: #777;
        }

        .filter-select, .filter-input {
            width: 100%;
            padding: 10px 15px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: var(--light-bg);
            color: var(--dark-text);
            transition: all 0.3s ease;
        }

            .filter-select:focus, .filter-input:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 3px rgba(228, 2, 100, 0.1);
                outline: none;
            }

        .search-box {
            position: relative;
            flex: 2;
            min-width: 300px;
        }

        .search-input {
            width: 100%;
            padding: 10px 15px 10px 40px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: var(--light-bg);
            color: var(--dark-text);
            transition: all 0.3s ease;
        }

            .search-input:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 3px rgba(228, 2, 100, 0.1);
                outline: none;
            }

        .search-icon {
            position: absolute;
            left: 15px;
            top: 70%;
            transform: translateY(-50%);
            color: #777;
        }

        .filter-buttons {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
        }

        .btn-filter {
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-reset {
            background-color: #f1f1f1;
            color: var(--dark-text);
            border: none;
        }

        .btn-apply {
            background: linear-gradient(135deg, var(--primary-color) 0%, #c4008b 100%);
            color: var(--light-text);
            border: none;
        }

            .btn-reset:hover, .btn-apply:hover {
                transform: translateY(-2px);
            }

        /* Orders Stats */
        .orders-stats {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background-color: var(--light-text);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 20px;
            display: flex;
            align-items: center;
            transition: all 0.3s ease;
        }

            .stat-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            }

        .stat-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            font-size: 1.5rem;
        }

            .stat-icon.total {
                background-color: rgba(228, 2, 100, 0.1);
                color: var(--primary-color);
            }

            .stat-icon.pending {
                background-color: rgba(255, 152, 0, 0.1);
                color: #ff9800;
            }

            .stat-icon.processing {
                background-color: rgba(0, 184, 212, 0.1);
                color: var(--secondary-color);
            }

            .stat-icon.completed {
                background-color: rgba(76, 175, 80, 0.1);
                color: #4caf50;
            }

        .stat-info {
            flex: 1;
        }

        .stat-value {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--dark-text);
            margin-bottom: 5px;
        }

        .stat-label {
            font-size: 0.9rem;
            color: #777;
        }

        /* Orders Table */
        .orders-table {
            background-color: var(--light-text);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 20px;
            margin-bottom: 30px;
        }

        .table-responsive {
            overflow-x: auto;
        }

        .table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 10px;
        }

            .table thead th {
                border: none;
                color: #777;
                font-weight: 500;
                padding: 12px 15px;
                text-transform: uppercase;
                font-size: 0.8rem;
            }

            .table tbody tr {
                background-color: var(--light-bg);
                border-radius: 10px;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
                transition: all 0.3s ease;
            }

                .table tbody tr:hover {
                    transform: translateY(-3px);
                    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
                }

            .table tbody td {
                border: none;
                padding: 15px;
                vertical-align: middle;
            }

                .table tbody td:first-child {
                    border-top-left-radius: 10px;
                    border-bottom-left-radius: 10px;
                }

                .table tbody td:last-child {
                    border-top-right-radius: 10px;
                    border-bottom-right-radius: 10px;
                }

        .order-id {
            font-weight: 600;
            color: var(--primary-color);
        }

        .customer-info {
            display: flex;
            align-items: center;
        }

        .customer-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 10px;
        }

        .customer-name {
            font-weight: 600;
            color: var(--dark-text);
            margin-bottom: 3px;
        }

        .customer-email {
            font-size: 0.8rem;
            color: #777;
        }

        .order-date {
            font-size: 0.9rem;
            color: #777;
        }

        .order-total {
            font-weight: 600;
            color: var(--dark-text);
        }

        .order-status {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 500;
            text-align: center;
            display: inline-block;
        }

        .status-pending {
            background-color: rgba(255, 152, 0, 0.1);
            color: #ff9800;
        }

        .status-processing {
            background-color: rgba(0, 184, 212, 0.1);
            color: var(--secondary-color);
        }

        .status-completed {
            background-color: rgba(76, 175, 80, 0.1);
            color: #4caf50;
        }

        .status-cancelled {
            background-color: rgba(244, 67, 54, 0.1);
            color: #f44336;
        }

        .action-buttons {
            display: flex;
            gap: 10px;
        }

        .btn-action {
            width: 35px;
            height: 35px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--light-text);
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-view {
            background-color: var(--secondary-color);
        }

        .btn-edit {
            background-color: #ff9800;
        }

        .btn-delete {
            background-color: #f44336;
        }

        .btn-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
        }

        /* Pagination */
        .pagination-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 20px;
        }

        .pagination-info {
            color: #777;
            font-size: 0.9rem;
        }

        .pagination {
            display: flex;
            gap: 5px;
        }

        .page-item {
            list-style: none;
        }

        .page-link {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 35px;
            height: 35px;
            border-radius: 8px;
            background-color: var(--light-bg);
            color: var(--dark-text);
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .page-link:hover, .page-link.active {
                background-color: var(--primary-color);
                color: var(--light-text);
            }

            .page-link.disabled {
                opacity: 0.5;
                cursor: not-allowed;
            }

        /* Modal */
        .modal-backdrop {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 2000;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
        }

            .modal-backdrop.show {
                opacity: 1;
                visibility: visible;
            }

        .modal-content {
            background-color: var(--light-text);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            width: 100%;
            max-width: 800px;
            max-height: 90vh;
            overflow-y: auto;
            transform: translateY(-20px);
            transition: all 0.3s ease;
        }

        .modal-backdrop.show .modal-content {
            transform: translateY(0);
        }

        .modal-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 20px;
            border-bottom: 1px solid #eee;
        }

        .modal-title {
            font-size: 1.5rem;
            color: var(--dark-text);
        }

        .modal-close {
            background: none;
            border: none;
            font-size: 1.5rem;
            color: #777;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .modal-close:hover {
                color: var(--primary-color);
            }

        .modal-body {
            padding: 20px;
        }

        .order-details {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-bottom: 30px;
        }

        .order-detail-column {
            flex: 1;
            min-width: 250px;
        }

        .detail-card {
            background-color: var(--light-bg);
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
        }

        .detail-card-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--dark-text);
            margin-bottom: 15px;
            display: flex;
            align-items: center;
        }

            .detail-card-title i {
                margin-right: 10px;
                color: var(--primary-color);
            }

        .detail-item {
            margin-bottom: 10px;
        }

        .detail-label {
            font-size: 0.8rem;
            color: #777;
            margin-bottom: 5px;
        }

        .detail-value {
            font-size: 0.9rem;
            color: var(--dark-text);
            font-weight: 500;
        }

        .order-items {
            margin-top: 20px;
        }

        .order-items-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--dark-text);
            margin-bottom: 15px;
        }

        .order-item {
            display: flex;
            align-items: center;
            background-color: var(--light-bg);
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 10px;
        }

        .order-item-image {
            width: 60px;
            height: 60px;
            border-radius: 8px;
            object-fit: cover;
            margin-right: 15px;
        }

        .order-item-info {
            flex: 1;
        }

        .order-item-name {
            font-weight: 600;
            color: var(--dark-text);
            margin-bottom: 5px;
        }

        .order-item-sku {
            font-size: 0.8rem;
            color: #777;
        }

        .order-item-price {
            font-weight: 600;
            color: var(--primary-color);
            margin-right: 20px;
        }

        .order-item-quantity {
            font-weight: 500;
            color: var(--dark-text);
            margin-right: 20px;
        }

        .order-item-total {
            font-weight: 600;
            color: var(--dark-text);
        }

        .order-summary {
            background-color: var(--light-bg);
            border-radius: 10px;
            padding: 15px;
            margin-top: 20px;
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }

        .summary-label {
            color: #777;
        }

        .summary-value {
            font-weight: 500;
            color: var(--dark-text);
        }

        .summary-total {
            display: flex;
            justify-content: space-between;
            margin-top: 15px;
            padding-top: 15px;
            border-top: 1px solid #ddd;
        }

        .summary-total-label {
            font-weight: 600;
            color: var(--dark-text);
        }

        .summary-total-value {
            font-weight: 700;
            color: var(--primary-color);
            font-size: 1.2rem;
        }

        .modal-footer {
            display: flex;
            justify-content: space-between;
            padding: 20px;
            border-top: 1px solid #eee;
        }

        .order-actions {
            display: flex;
            gap: 10px;
        }

        .btn-modal {
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            border: none;
        }

        .btn-cancel-order {
            background-color: #f44336;
            color: var(--light-text);
        }

        .btn-update-status {
            background-color: #ff9800;
            color: var(--light-text);
        }

        .btn-print {
            background-color: var(--secondary-color);
            color: var(--light-text);
        }

        .btn-modal:hover {
            transform: translateY(-2px);
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .orders-stats

        {
            grid-template-columns: repeat(2, 1fr);
        }

        .order-details {
            flex-direction: column;
        }

        }

        @@media (max-width: 768px) {
            .sidebar

        {
            transform: translateX(-100%);
        }

        .sidebar.active {
            transform: translateX(0);
        }

        .main-content {
            margin-left: 0;
        }

        .page-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 15px;
        }

        .orders-stats {
            grid-template-columns: 1fr;
        }

        .filter-row {
            flex-direction: column;
        }

        .filter-item, .search-box {
            min-width: 100%;
        }

        .modal-footer {
            flex-direction: column;
            gap: 15px;
        }

        .order-actions {
            flex-direction: column;
            width: 100%;
        }

        .btn-modal {
            width: 100%;
        }

        }

        /* Animation classes */
        .fade-in {
            animation: fadeIn 0.5s ease-in-out;
        }

        .slide-up {
            animation: slideUp 0.5s ease-in-out;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }

        @@keyframes slideUp {
            from

        {
            transform: translateY(20px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }

        }
    </style>
}
