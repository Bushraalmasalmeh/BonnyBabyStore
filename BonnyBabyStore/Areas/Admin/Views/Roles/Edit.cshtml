@model BonnyBabyStore.Models.Role

@{
    ViewData["Title"] = "Edit Role";
    Layout = "_AdminLayout";
}

<div class="page-header">
    <h1 class="page-title">Edit Role: @Model.Name</h1>
</div>

<div class="form-card" style="background-color: white; padding: 30px; border-radius: 15px;">
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mb-3">
            <label asp-for="Name" class="control-label fw-bold"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn-add">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>