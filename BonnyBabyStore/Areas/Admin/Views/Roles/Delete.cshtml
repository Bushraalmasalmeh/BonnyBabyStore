@model BonnyBabyStore.Models.Role

@{
    ViewData["Title"] = "Delete Role";
    Layout = "_AdminLayout";
}

<div class="page-header">
    <h1 class="page-title">Delete Role</h1>
</div>

<div class="delete-card" style="background-color: white; padding: 30px; border-radius: 15px; text-align:center;">
    <h3 class="text-danger">Are you sure you want to delete this role?</h3>
    <hr />
    <h4>Role Name: @Model.Name</h4>
    <p class="text-muted">Deleting this role might affect users assigned to it.</p>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger btn-lg">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
    </form>
</div>