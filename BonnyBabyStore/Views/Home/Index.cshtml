    /*   margin-right: 10px; */
    /*   transition: all 0.3s ease; */
    /* } */



    /* Simple Footer */
    .custom-footer {
      background-color: var(--primary-color);
      color: white;
      padding: 15px 0;
      text-align: center;
    }

    /* Responsive Adjustments */
    @@media (max-width: 992px) {
      .instagram-feed {
        grid-template-columns: repeat(3, 1fr);
      }

      .featured-product-large {
        height: 400px;
      }

      .featured-product-small {
        height: 200px;
      }
    }

    @@media (max-width: 768px) {
      .hero-content h1 {
        font-size: 2.5rem;
      }

      .hero-content p {
        font-size: 1.2rem;
      }

      .featured-product-large {
        height: 350px;
        margin-bottom: 20px;
      }
    }

    @@media (max-width: 576px) {
      .instagram-feed {
        grid-template-columns: repeat(2, 1fr);
      }

      .hero-overlay {
        width: 90%;
        padding: 30px 20px;
      }

      .newsletter-section {
        padding: 30px 20px;
      }

      .featured-product-large,
      .featured-product-small {
        height: 250px;
        margin-bottom: 20px;
      }
