
@{
    ViewData["Title"] = "Access Denied";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Access Denied - Bonny Baby</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Caveat:wght@400;700&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #e40264;
            --secondary-color: #00b8d4;
            --light-bg: #f8f9fa;
            --dark-text: #333;
            --light-text: #fff;
            --border-radius: 15px;
            --box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e6f7fa 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Poppins', sans-serif;
        }

        .access-denied-container {
            background: #fff;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 60px 40px;
            max-width: 420px;
            width: 100%;
            text-align: center;
            position: relative;
        }

        .access-denied-icon {
            font-size: 3.5rem;
            color: var(--primary-color);
            margin-bottom: 18px;
        }

        .access-denied-title {
            font-family: 'Caveat', cursive;
            font-size: 2.5rem;
            color: var(--primary-color);
            font-weight: 700;
            margin-bottom: 10px;
        }

        .access-denied-message {
            color: var(--dark-text);
            font-size: 1.1rem;
            margin-bottom: 30px;
        }

        .btn-theme {
            background: linear-gradient(135deg, var(--primary-color) 0%, #c4008b 100%);
            color: var(--light-text);
            border: none;
            border-radius: 30px;
            padding: 12px 32px;
            font-size: 1rem;
            font-weight: 600;
            box-shadow: 0 4px 16px rgba(228, 2, 100, 0.08);
            transition: all 0.2s;
        }

            .btn-theme:hover {
                color: var(--light-text);
                transform: translateY(-2px);
                box-shadow: 0 8px 24px rgba(228, 2, 100, 0.15);
            }
        @@media (max-width: 600px) {
            .access-denied-container

        {
            padding: 30px 10px;
        }

        }
    </style>
</head>
<body>
    <div class="access-denied-container">
        <div class="access-denied-icon">
            <i class="fas fa-ban"></i>
        </div>
        <div class="access-denied-title">Access Denied</div>
        <div class="access-denied-message">
            You do not have permission to view this page.<br />
            Please contact the administrator if you believe this is a mistake.
        </div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-theme">
            <i class="fas fa-home me-2"></i>Go to Home Page
        </a>
    </div>
</body>
</html>
